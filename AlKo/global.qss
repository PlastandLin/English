
QWidget {
    background-color: #f0f4f8;
    font-family: Arial, sans-serif;
    font-size: 16px;
}

QLabel {
    color: #333;
}

QPushButton {
    background-color: #4caf50;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 8px;
}

QPushButton:hover {
    background-color: #45a049;
}

QTextEdit {
    background-color: white;
    border: 1px solid #ccc;
    padding: 8px;
    border-radius: 4px;
    font-size: 15px;
}
